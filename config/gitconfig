[alias]
  a = add -A
  amend = commit -a --amend --no-edit
  ca = commit -am
  c = commit -m
  d = diff
  dt = difftool
  p = push
  pu = pull
  r = remote
  s = status
[color]
  ui = true
[core]
  editor = nvim
  sparsecheckout = true
[diff]
  prompt = false
  tool = vimdiff
[difftool]
  path = nvim
[hub]
  protocol = ssh
