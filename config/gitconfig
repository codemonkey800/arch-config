# vim: set ts=2 sw=2 sts=2 et sta :

[alias]
  a = add --all
  amend = commit --all --amend --no-edit
  c = commit --message
  ca = commit --all --message
  d = diff
  dt = difftool
  l = log --show-signature --name-status --color=always
  ls = ls-files
  p = push
  pu = pull
  r = remote
  s = status

[color]
  ui = true

[commit]
  gpgsign = true

[core]
  editor = nvim
  sparsecheckout = true

[diff]
  prompt = false
  tool = vimdiff

[difftool]
  path = nvim

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true

[gpg]
  program = "/usr/bin/gpg2"

[hub]
  protocol = "ssh"

[url "git@gitlab.com:"]
  insteadOf = "gl://"

[url "ssh://aur@aur.archlinux.org/"]
  insteadOf = "aur://"

