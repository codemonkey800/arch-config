# vim: set ts=2 sw=2 sts=2 et sta :

[alias]
  a = add -A
  amend = commit -a --amend --no-edit
  ca = commit -am
  c = commit -m
  d = diff
  dt = difftool
  p = push
  pu = pull
  r = remote
  s = status

[color]
  ui = true

[core]
  editor = nvim
  sparsecheckout = true

[diff]
  prompt = false
  tool = vimdiff

[difftool]
  path = nvim

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true

[hub]
  protocol = ssh

[url "git@gitlab.com:"]
  insteadOf = "gl:"

