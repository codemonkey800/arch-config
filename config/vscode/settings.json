{
  "editor.fontFamily": "'Hack', monospace",
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": true,
  "editor.tabSize": 2,

  "extensions.autoUpdate": true,

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "terminal.external.linuxExec": "termite",

  "window.menuBarVisibility": "toggle",

  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "#212121",
  "vim.easymotionMarkerFontSize": "18",
  "vim.easymotionMarkerForegroundColorOneChar": "#ff0",
  "vim.easymotionMarkerForegroundColorTwoChar": "#0ff",
  "vim.enableNeovim": true,
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.showcmd": false,
  "vim.surround": true,
  "vim.useSystemClipboard": true,

  "vim.handleKeys": {
    "<C-f>": false,
    "<C-n>": false,
    "<C-w>": false
  },
  "vim.otherModesKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["o"],
      "after": ["o", "<Esc>", "k"]
    },
    {
      "before": ["O"],
      "after": ["O", "<Esc>"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["<leader>", "s"],
      "after": [],
      "commands": [
        { "command": ":sort" },
        { "command": "extension.vim_escape" },
        { "command": "extension.vim_ctrl+o" }
      ]
    },
    {
      "before": ["<leader>", "S"],
      "after": [],
      "commands": [
        { "command": ":sort!" },
        { "command": "extension.vim_escape" },
        { "command": "extension.vim_ctrl+o" }
      ]
    },

    {
      "before": ["U"],
      "after": ["<C-r>"]
    },
    {
      "before": ["q"],
      "after": [],
      "commands": [
        { "command": ":quit" }
      ]
    },
    {
      "before": ["g", "a"],
      "after": [],
      "commands": [
        { "command": "extension.align" },
        { "command": "extension.vim_escape" },
        { "command": "extension.vim_ctrl+o" }
      ]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],

  "vsicons.projectDetection.autoReload": true,

  "workbench.colorTheme": "Monokai Dimmed",
  "workbench.iconTheme": "vscode-icons"
}
