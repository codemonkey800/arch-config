{
  "editor.fontFamily": "'Hack', monospace",
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": true,
  "editor.renderIndentGuides": false,
  "editor.tabSize": 2,

  "extensions.autoUpdate": true,

  "files.exclude": {
    "node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "search.useRipgrep": true,

  "terminal.external.linuxExec": "termite",

  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "#212121",
  "vim.easymotionMarkerFontSize": "18",
  "vim.easymotionMarkerForegroundColorOneChar": "#ff0",
  "vim.easymotionMarkerForegroundColorTwoChar": "#0ff",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.showcmd": false,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,

  "vim.handleKeys": {
    "<C-f>": false,
    "<C-n>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
     {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["o"],
      "after": ["o", "<Esc>", "k"]
    },
    {
      "before": ["O"],
      "after": ["O", "<Esc>"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["U"],
      "after": ["<C-r>"]
    },

    {
      "before": ["q"],
      "commands": [
        { "command": ":quit" }
      ]
    },
    {
      "before": ["Q"],
      "commands": [
        { "command": ":quit!" }
      ]
    },

    {
      "before": ["Y"],
      "commands": [
        { "command": "copyRelativeFilePath" }
      ]
    },

    {
      "before": ["g", "r"],
      "commands": [
        { "command": "editor.action.referenceSearch.trigger" }
      ]
    },

    {
      "before": ["<leader>", "k"],
      "commands": [
        { "command": "workbench.action.keepEditor" }
      ]
    }
 ],
  "vim.visualModeKeyBindingsNonRecursive": [
     {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["g", "a"],
      "commands": [
        { "command": "extension.align" },
        { "command": "extension.vim_escape" }
      ]
    },

    {
      "before": ["<leader>", "s", "d"],
      "commands": [
        { "command": "editor.action.sortLinesDescending" }
      ]
    },
    {
      "before": ["<leader>", "s", "a"],
      "commands": [
        { "command": "editor.action.sortLinesAscending" }
      ]
    }
  ],

  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "workbench.colorTheme": "Material Theme Darker High Contrast",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "gitlens.advanced.messages": {
    "suppressCommitNotFoundWarning": true,
    "suppressShowKeyBindingsNotice": true
  },
  "window.zoomLevel": 0,
  "explorer.confirmDragAndDrop": false,
  "breadcrumbs.enabled": true,
  "git.confirmSync": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
