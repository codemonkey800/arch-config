{
  "editor.fontFamily": "'Hack', monospace",
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": true,
  "editor.renderIndentGuides": false,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "extensions.autoUpdate": true,

  "files.exclude": {
    "node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "search.quickOpen.includeHistory": false,

  "terminal.external.linuxExec": "termite",

  "workbench.colorTheme": "Material Theme Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "window.zoomLevel": 0,
  "explorer.confirmDragAndDrop": false,
  "breadcrumbs.enabled": true,
  "git.confirmSync": false,

  // Formatter settings

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Extension settings

  "markdown-preview-enhanced.breakOnSingleNewLine": false,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],

  "gitlens.advanced.messages": {
    "suppressCommitNotFoundWarning": true,
    "suppressShowKeyBindingsNotice": true
  },

  "vetur.experimental.templateInterpolationService": false,
  "vetur.useWorkspaceDependencies": true,

  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "#212121",
  "vim.easymotionMarkerForegroundColorOneChar": "#ff0",
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.hlsearch": true,
  "vim.leader": ",",
  "vim.showcmd": false,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,

  "vim.handleKeys": {
    "<C-f>": false,
    "<C-n>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["o"],
      "after": ["o", "<Esc>", "k"]
    },
    {
      "before": ["O"],
      "after": ["O", "<Esc>"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["u"],
      "commands": [{ "command": "undo" }]
    },
    {
      "before": ["U"],
      "commands": [{ "command": "redo" }]
    },

    {
      "before": ["q"],
      "commands": [{ "command": ":quit" }]
    },
    {
      "before": ["Q"],
      "commands": [{ "command": ":quit!" }]
    },

    {
      "before": ["Y"],
      "commands": [{ "command": "copyRelativeFilePath" }]
    },

    {
      "before": ["g", "r"],
      "commands": [{ "command": "editor.action.referenceSearch.trigger" }]
    },

    {
      "before": ["<leader>", "k"],
      "commands": [{ "command": "workbench.action.keepEditor" }]
    },

    {
      "before": ["g", "o"],
      "commands": [{ "command": "editor.action.openLink" }]
    },

    {
      "before": ["<leader>", "f"],
      "commands": [{ "command": "editor.action.formatDocument" }]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },

    {
      "before": ["H"],
      "after": ["0"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },

    {
      "before": ["g", "a"],
      "commands": [
        { "command": "extension.align" },
        { "command": "extension.vim_escape" }
      ]
    },

    {
      "before": ["<leader>", "s", "d"],
      "commands": [{ "command": "editor.action.sortLinesDescending" }]
    },
    {
      "before": ["<leader>", "s", "a"],
      "commands": [{ "command": "editor.action.sortLinesAscending" }]
    },

    {
      "before": ["<leader>", "g", "s"],
      "commands": [{ "command": "git.stageSelectedRanges" }]
    },
    {
      "before": ["<leader>", "g", "u"],
      "commands": [{ "command": "git.unstageSelectedRanges" }]
    }
    {
      "before": ["<leader>", "g", "r"],
      "commands": [{ "command": "git.revertSelectedRanges" }]
    }
  ],

  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "python.languageServer": "Pylance"
}
