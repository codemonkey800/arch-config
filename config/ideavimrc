" This is a stripped down version of my neovim init.vim file
" that is used for IDEA based IDEs. It includes basic and mapleader
" based mappings as well as mappings for IDE actions.

" basic mappings {{

" escape insert mode
inoremap jk <esc>

" Ctrl-C to escape
nnoremap <C-c> <esc>

" move vertically by visual line
noremap j gj
noremap k gk

" swap capital H and L for begin and end of lines
noremap H ^
noremap L $

" quit and force quit maps
nnoremap Q :q!<CR>
nnoremap q :q<CR>

" adds a new line below or above without entering insert mode
noremap o o<esc>k
noremap O O<esc>j

" redo last thing
noremap U :redo<CR>

" Go back from tag using Ctrl-[, which makes more sense than Ctrl-t
nnoremap gt <C-]>
nnoremap gT <C-t>
nnoremap <C-]> <nop>

" }}

" leader mappings {{

let g:mapleader = ','

" sort things
noremap <leader>s :sort<CR>
noremap <leader>S :sort!<CR>

" select all text
noremap <leader>a ggvG$

" system clipboard
vnoremap <leader>c "+y
nnoremap <leader>v "+p

" }}

" extensions {{

" vim-surround plugin
set surround

" }}
